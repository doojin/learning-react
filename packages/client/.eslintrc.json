{
    "parser": "babel-eslint",
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "plugins": [
        "jest"
    ],
    "env": {
        "jest/globals": true
    },
    "rules": {
        "react/prop-types": [
            2,
            { "ignore": ["children"] }
        ]
    },
    "overrides": [
        {
            "files": [
                "*.test.js"
            ],
            "rules": {
                "import/first": "off"
            }
        }
    ]
}